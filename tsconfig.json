{
  "compilerOptions": {
    "baseUrl": "./src/",
    "target": "es2016",
    "module": "esnext",
    "sourceMap": true,
    "removeComments": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "*": [
        "*"
      ]
    }
  },
  "exclude": [
    "./node_modules/**/*",
    "./tests/*",
    "./backend/*"
  ]
}